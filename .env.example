# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/oauth/callback

# Security
TOKEN_ENCRYPTION_KEY=generate-a-32-byte-key-here
JWT_SECRET=generate-a-secure-secret-here

# Database (optional - defaults to ./data/gmail-mcp.db)
DB_URL=./data/gmail-mcp.db

# CORS (optional - comma-separated list of allowed origins)
ALLOWED_ORIGINS=
